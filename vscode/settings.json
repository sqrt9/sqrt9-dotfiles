  "telemetry.telemetryLevel": "off",
  "multiCommand.commands": [
    {
      "command": "multiCommand.lookUp7",
      "sequence": [
        "cursorMove",
        { "to": "up", "by": "line", "value": 7, "select": false, "view": true }
      ]
    },
    {
      "command": "multiCommand.lookDown7",
      "sequence": [
        "cursorMove",
        {
          "to": "down",
          "by": "line",
          "value": 7,
          "select": false,
          "view": true
        }
      ]
    },

    {
      "command": "multiCommand.togglePanel",
      "sequence": [
        { "command": "trackmaximizedpanel.minimize" },
        { "command": "workbench.action.togglePanel" }
      ]
    },
    {
      "command": "multiCommand.toggleSidebarAndTabsAndMiniMap",
      "sequence": [
        "workbench.action.toggleSidebarVisibility",
        {
          //find reference at top of keybindings.json
          "command": "toggle",
          "args": {
            "id": "minimap",
            "value": [
              {
                "editor.minimap.enabled": true
              },
              {
                "editor.minimap.enabled": false
              }
            ]
          }
        },
        {
          "command": "toggle",
          "args": {
            "id": "tabs",
            "value": [
              {
                "workbench.editor.showTabs": true
              },
              {
                "workbench.editor.showTabs": false
              }
            ]
          }
        }
      ]
    },
    {
      "command": "multiCommand.newBlankEditorRight",
      "sequence": [
        { "command": "workbench.action.splitEditorRight" },
        { "command": "workbench.action.closeActiveEditor" }
      ]
    },
    {
      "command": "multiCommand.newBlankEditorBelow",
      "sequence": [
        { "command": "workbench.action.splitEditorDown" },
        { "command": "workbench.action.closeActiveEditor" }
      ]
    },

    {
      "command": "multiCommand.scrollDown7",
      "sequence": [
        "cursorDown",
        "cursorDown",
        "cursorDown",
        "cursorDown",
        "cursorDown",
        "cursorDown",
        "cursorDown"
      ]
    },
    {
      "command": "multiCommand.scrollUp7",
      "sequence": [
        "cursorUp",
        "cursorUp",
        "cursorUp",
        "cursorUp",
        "cursorUp",
        "cursorUp",
        "cursorUp"
      ]
    },

    {
      "command": "multiCommand.lookDown7",
      "sequence": [
        {
          "command": "editorScroll",
          "args": { "to": "down", "by": "line", "revealCursor": false }
        },
        {
          "command": "editorScroll",
          "args": { "to": "down", "by": "line", "revealCursor": false }
        },
        {
          "command": "editorScroll",
          "args": { "to": "down", "by": "line", "revealCursor": false }
        },
        {
          "command": "editorScroll",
          "args": { "to": "down", "by": "line", "revealCursor": false }
        },
        {
          "command": "editorScroll",
          "args": { "to": "down", "by": "line", "revealCursor": false }
        },
        {
          "command": "editorScroll",
          "args": { "to": "down", "by": "line", "revealCursor": false }
        },
        {
          "command": "editorScroll",
          "args": { "to": "down", "by": "line", "revealCursor": false }
        }
      ]
    },
    {
      "command": "multiCommand.lookUp7",
      "sequence": [
        {
          "command": "editorScroll",
          "args": { "to": "up", "by": "line", "revealCursor": false }
        },
        {
          "command": "editorScroll",
          "args": { "to": "up", "by": "line", "revealCursor": false }
        },
        {
          "command": "editorScroll",
          "args": { "to": "up", "by": "line", "revealCursor": false }
        },
        {
          "command": "editorScroll",
          "args": { "to": "up", "by": "line", "revealCursor": false }
        },
        {
          "command": "editorScroll",
          "args": { "to": "up", "by": "line", "revealCursor": false }
        },
        {
          "command": "editorScroll",
          "args": { "to": "up", "by": "line", "revealCursor": false }
        },
        {
          "command": "editorScroll",
          "args": { "to": "up", "by": "line", "revealCursor": false }
        }
      ]
    },
    {
      "command": "multiCommand.previousPanelView",
      "sequence": [
        "workbench.action.focusPanel",
        "workbench.action.previousPanelView"
      ]
    },
    {
      "command": "multiCommand.moveTerminalToNextGroup",
      "sequence": [
        "workbench.action.terminal.moveToEditor",
        "workbench.action.moveEditorToNextGroup"
      ]
    },
    {
      "command": "multiCommand.makeTerminalInEditorGroup",
      "sequence": [
        "workbench.action.terminal.new",
        "workbench.action.terminal.moveToEditor",
        "workbench.action.moveEditorToLastGroup"
      ]
    }
  ],

  //terminal commands that skip / are sent to / the shell
