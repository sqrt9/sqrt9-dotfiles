{
  //yes, we code in the home directory. Get over it!!!!
  "files.watcherExclude": {
    "**/.vscode-test.{js,mjs,cjs}" : true,
    "${env:HOME}/Library/**" : true,
    "${env:HOME}/Music/**" : true,
    "${env:HOME}/Pictures/**" : true,
    "${env:HOME}/Movies/**" : true,
    "${env:HOME}/Jagex/**" : true,
    "${env:HOME}/VulkanSDK/**" : true,
    "${env:HOME}/Documents/**" : true,
    "${env:HOME}/wineprefix64/**" : true,
    "${env:HOME}/.opam/**" : true,
    "${env:HOME}/.wine/**" : true,
    "${env:HOME}/.cache/**" : true,
    "${env:HOME}/Virtual Machines.localized/**" : true
  },
  
  "search.exclude": {
    "**/.vscode-test.{js,mjs,cjs}" : true,
    "${env:HOME}/Library/**" : true,
    "${env:HOME}/Music/**" : true,
    "${env:HOME}/Pictures/**" : true,
    "${env:HOME}/Movies/**" : true,
    "${env:HOME}/Jagex/**" : true,
    "${env:HOME}//**" : true,
    "${env:HOME}/VulkanSDK/**" : true,
    "${env:HOME}/Documents/**" : true,
    "${env:HOME}/wineprefix64/**" : true,
